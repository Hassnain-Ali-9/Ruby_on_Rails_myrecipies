<%= render 'shared/page_title', title: @recipe.name %>


<div class="container">
<div class="row">
<div class="col-md-8 offset-md-2"> 
  <div class="p-4 mb-3 bg-secondary text-black">
 <h4 class="center description"><strong>Steps: </strong> </h4>
 <hr/>
 <%= simple_format(@recipe.description) %>
 <hr/>

 <div class="float-right">

  <p class="d-flex justify-content-end center">
    <em>Created by:</em>
  </p>
  <p class="d-flex justify-content-end">
    <%= link_to gravatar_for(@recipe.chef),recipes_path %>
  </p>

  <p class="d-flex justify-content-end">
     <small><%= @recipe.chef.chefname.capitalize %></small>
      <div class="d-flex justify-content-end">Created: <%= time_ago_in_words(@recipe.created_at) %>  ago</div>
  </p>

 </div>
<div>
  <%= link_to "Edit this recipe", edit_recipe_path(@recipe), class: "btn btn-xs btn-warning"%>
  <%= link_to "Delete this recipe", recipe_path(@recipe), method: :delete, data: {confirm: "Are you sure you want to delete this recipe"} ,
  class: "btn btn-xs btn-danger"%>
  <%= link_to "Return to recipe listing", recipes_path, class: "btn btn-xs btn-primary"%>
  



</div>
 </div>

</div>


</div>
</div>
