<%= render 'shared/page_title', title: "edit an existing recipe" %>

<% if @recipe.errors.any? %>

<div class="row mb-3">
  <div class="col-md-6 offset-md-3">
    <div class="card">
        <div class="card-header">
          <h2 class="card-title">
            <%= pluralize(@recipe.errors.count,"error") %>
            prohibted this <%= @recipe.class %> from being saved:
          </h2>
          <div class="card-body">
            <ul>
            <% @recipe.errors.full_messages.each do |msg| %>
             <li> <%= msg %> </li>
             <%end%>
             </ul>
           </div>
         </div>
       </div>
     </div>
   </div>
<%end%>


<div class="row">
	<div class="col-md-12">

   <%= form_for(@recipe, :html => {class: "form-group row", role: "form"}) do |f| %>
    <div class="form-group row mb-3">
	    <div class="col-form-label col-md-2 text-end">
		  <%= f.label :name %>
	   </div>

	   <div class="col-md-8">
		  <%= f.text_field :name, class: "form-control", placeholder: "Name of recipe" , autofocus: true %>
 	   </div>
   </div>

   <div class="form-group row mb-3">
      <div class="col-form-label col-md-2 text-end">
      <%= f.label :description %>
     </div>

     <div class="col-md-8">
      <%= f.text_area :description, rows: 10 ,  class: "form-control", placeholder: "Enter steps to create recipe" , autofocus: true %>
     </div>
   </div>

   <div class="form-group row mb-3">
    <div class=" offset-md-2 col-md-10">
      <%= f.submit class:"btn btn-primary btn-lg"%>
    </div>
   </div>
   <% end %>

   <div class="offset-md-5 col-md-4">

    [ <%= link_to "Cancel request and return to reciped listing", recipes_path %> ] 


   </div>
    



 </div>
</div>